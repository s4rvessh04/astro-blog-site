---
import { Image } from "@astrojs/image/components";

export interface Props extends astroHTML.JSX.AnchorHTMLAttributes {}

export interface Props {
	content: {
		title: string;
		description: string;
		heroImage: string;
		pubDate: string;
		type: string;
	};
}

const {
	class: className,
	content: { heroImage, title, description, pubDate, type },
	...props
} = Astro.props;
---

<div class:list={["flex flex-col group", className]} {...props}>
	<div
		class="md:rounded-xl rounded-xl md:mb-4 mb-2 lg:h-auto md:h-96 h-80 overflow-hidden group-hover:shadow-xl duration-150"
	>
		<Image
			class="group-hover:scale-105 duration-300 h-full object-cover object-center"
			src={heroImage}
			height={700}
			aspectRatio={16 / 9}
			format={"webp"}
			alt="hero-image"
		/>
	</div>
	<div class="mt-2 duration-200">
		<h1
			class="md:text-4xl text-2xl font-bold tracking-tight leading-tight md:mb-2 mb-1 hover:underline decoration-4 decoration-purple-500 hover:text-purple-700"
		>
			{title}
		</h1>
		<p
			class="md:text-xl text-md font-medium text-neutral-500 mb-5 leading-snug"
		>
			{description}
		</p>
		<div class="md:text-sm text-xs tracking-wide font-number">
			<time datetime={pubDate} class="font-medium">
				{
					new Date(pubDate).toLocaleDateString("en-us", {
						year: "numeric",
						month: "short",
						day: "numeric",
					})
				}
			</time>
			-
			<span
				class="font-bold bg-clip-text text-transparent bg-gradient-to-br from-rose-700 via-violet-600 to-indigo-700"
				>{type}</span
			>
		</div>
	</div>
</div>

<style>
	.img-clip {
		background-repeat: no-repeat;
		clip-path: polygon(10% 0, 100% 0, 100% 80%, 90% 100%, 0 100%, 0 20%);
	}
</style>
