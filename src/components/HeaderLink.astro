---
export interface Props extends astroHTML.JSX.AnchorHTMLAttributes {}

const { href, class: className, ...props } = Astro.props;
const isActive = href === Astro.url.pathname;
// const isActive = href === Astro.url.pathname.replace(/\/$/, "");
---

<a
	href={href}
	class:list={[
		className,
		"hover:underline lg:underline-offset-8 underline-offset-4 hover:decoration-indigo-500",
		{
			"underline decoration-2 decoration-indigo-500": isActive,
		},
	]}
	{...props}
>
	<slot />
</a>
<style>
	a {
		display: inline-block;
		text-decoration: none;
	}
	a.active {
		font-weight: bolder;
		text-decoration: underline;
	}
</style>
